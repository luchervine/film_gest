{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <h1>Actor index</h1>

    <div class="card">
        <div class="card-body">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-10 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-header text-bg-info">
                                    <h4 class="card-title ">Acteurs</h4>
                                    <p class="card-category"> Liste de tous les acteurs actifs</p>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive example-wrapper">
                                        <table class="table table-striped table-hover">
                                            <thead class="text-info">
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Nom</th>
                                                    <th>Date de naissance</th>
                                                    <th class="text-center">actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for actor in actors %}
                                                <tr>
                                                    <td>{{ actor.id }}</td>
                                                    <td>{{ actor.nom }}</td>
                                                    <td>{{ actor.naissance ? actor.naissance|date('d-m-Y') : '' }}</td>
                                                    <td class="text-center">
                                                        <a href="{{ path('app_actor_show', {'id': actor.id}) }}"><i class="fa fa-eye"></i></a>
                                                        <a class="border"> </a><a class="border"> </a>
                                                        <a href="{{ path('app_actor_edit', {'id': actor.id}) }}"> <i class="fa fa-pen-nib"></i></a>
                                                        <a class="border"> </a><a class="border"> </a>
                                                        <a class="text-danger" href="{{ path('app_actor_delete', {'id': actor.id}) }}"> <i class="fa fa-trash-can"></i></a>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="4">no records found</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                        
                                    <a class="btn btn-primary" href="{{ path('app_actor_new') }}">Ajouter</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
