<form method="post" action="{{ path('app_director_delete', {'id': director.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    {% if app.request.get('_route') == 'app_director_show' %}
    <span class="float-left">
        <a class="btn btn-primary" href="{{ path('app_director_edit', {'id': director.id}) }}">Modifier</a>
    </span>
    {% endif %}
    <span class="float-right">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ director.id) }}">
        <button class="btn btn-danger"><i class="fa fa-trash-can"></i> Supprimer</button>
    </span>
</form>
