{% extends 'base.html.twig' %} {% block title %}Productor index{% endblock %} {%
block body %}
<h1>Productor index</h1>

<div class="card">
  <div class="card-body">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-header text-bg-info">
                <h4 class="card-title">Producteurs</h4>
                <p class="card-category">Liste de tous les producteurs</p>
              </div>
              <div class="card-body">
                <div class="table-responsive example-wrapper">
                  <table class="table table-striped table-hover">
                    <thead class="text-info">
                      <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Date de naissance</th>
                        <th class="text-center">actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for director in directors %}
                      <tr>
                        <td>{{ director.id }}</td>
                        <td>{{ director.nom }}</td>
                        <td>
                          {{ director.naissance ? director.naissance|date('d-m-Y') : '' }}
                        </td>
                        <td class="text-center">
                          <a
                            href="{{
                              path('app_director_show', { id: director.id })
                            }}"
                            ><i class="fa fa-eye"></i
                          ></a>
                          <a class="border"> </a><a class="border"> </a>
                          <a
                            href="{{
                              path('app_director_edit', { id: director.id })
                            }}"
                          >
                            <i class="fa fa-pen-nib"></i
                          ></a>
                          <a class="border"> </a><a class="border"> </a>
                          <a
                            class="text-danger"
                            href="{{
                              path('app_director_delete', { id: director.id })
                            }}"
                          >
                            <i class="fa fa-trash-can"></i
                          ></a>
                        </td>
                      </tr>
                      {% else %}
                      <tr>
                        <td colspan="4">no records found</td>
                      </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                </div>

                <a class="btn btn-primary" href="{{ path('app_director_new') }}"
                  >Ajouter</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
